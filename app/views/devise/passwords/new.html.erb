<div class="container container-devise">
	<div class="row centered-form">
	  <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
	  	<div class="panel panel-default">
	  		<div class="panel-heading">
	      	<h2 class="panel-title">Forgot your password?</h2>
	      </div>
	      <div class="panel-body">
	       	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	       	<%= f.error_notification %>
	      	<form role="form">

	          <div class="form-group">
	            <%= f.input :email, placeholder: 'Email', input_html: { class: 'form-control input-sm' }, required: true, autofocus: true, label: false %>
	          </div>

	          <div class="form-actions">
	           	<%= f.button :submit, "Reset password", :class => "btn btn-primary btn-block btn-lg btn-devise" %>
	           </div>

	        </form>
	        <% end %>
	       <%= render "devise/shared/links" %>
	  		</div>
	 		</div>
		</div>
	</div>
</div>


