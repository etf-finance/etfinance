<div class="container">
   <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
    	<div class="panel panel-default">
    		<div class="panel-heading">
	    		<h2 class="panel-title">Sign up</h2>
	 			</div>
	 			<div class="panel-body">
	 			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  			<%= f.error_notification %>
	    		<form role="form">
	    			<div class="row">
	    				<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class="form-group">
	                <%= f.input :first_name, placeholder: 'First Name', input_html: { class: 'form-control input-sm' }, required: true, autofocus: true, label: false %>
	    					</div>
	    				</div>
	    				<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class="form-group">
	    						<%= f.input :last_name, placeholder: 'Last Name', input_html: { class: 'form-control input-sm' }, required: true, autofocus: true, label: false %>
	    					</div>
	    				</div>
	    			</div>

	    			<div class="form-group">
	    				<%= f.input :email, placeholder: 'Email', input_html: { class: 'form-control input-sm' }, required: true, autofocus: true, label: false %>
	    			</div>

	    			<div class="row">
	    				<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class="form-group">
	    						<input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
	    					</div>
	    				</div>
	    				<div class="col-xs-6 col-sm-6 col-md-6">
	    					<div class="form-group">
	    						<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
	    					</div>
	    				</div>
	    			</div>
	    			
	    			<input type="submit" value="Register" class="btn btn-info btn-block">
	    		
	    		</form>
	    		<% end %>
	    		<%= render "devise/shared/links" %>
	    	</div>

  		</div>
		</div>
	</div>
</div>
