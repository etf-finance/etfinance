<header id="main-header">
  <div class="header-content">
	  <div class="container">
 	  	<div class="row">
	 	  	<div class="col-xs-12 col-sm-3 col-sm-offset-1 card card-content">
	 	  	<h5>Creation</h5>
	 	  	<hr>
	 	  		<%= simple_form_for @coefficient do |f| %>
					  <%= f.input :symbol %>
					  <%= f.input :value %>
					  <%= f.button :submit %>
					<% end %>
	 	  	</div>
	 	  	<div class="col-xs-12 col-sm-3 col-sm-offset-1 card card-content">
	 	  	<h5>New Coefficients</h5>
	 	  	<hr>
	 	  		<% @new_coefficients.each do |c| %>
						<div class="row">
							<div class="col-sm-6">
								<%= c.symbol %> -  <%= c.value %> 
							</div>
							<div class="col-sm-6">
								<%= link_to "Delete", coefficient_path(c.id), method: :delete %>
							</div>
						</div>
						<br>
				<% end %>
	 	  	</div>

	 	  	<div class="col-xs-12 col-sm-2 col-sm-offset-1 card card-content">
	 	  	<h5>Previous Coefficients</h5>
	 	  	<hr>
	 	  		<% @expired_coefficients.each do |c| %>
						<div class="row">
							<div class="col-sm-12">
								<%= c.symbol %> -  <%= c.value %> 
							</div>
						</div>
						<br>
				<% end %>
	 	  	</div>
	  		
	  	</div>
	  </div>
  </div>
</header>