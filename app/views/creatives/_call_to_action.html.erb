<aside class="bg-dark">
    <div class="container text-center">
        <div class="call-to-action">
            <h2>Receive Our Free Weekly Newsletter!</h2>
            <%= form_tag newsletter_subscription_path, method: :post do %>
                <div class="row">
                	<div class="col-sm-4 col-sm-offset-4">
                        <%= text_field_tag :email, nil, class: "form-control input-lg", id: "exampleInputName2", placeholder: "your email"%>
                	</div>
                </div>
                <br>
                <div class="row">
                	<div class="col-sm-4 col-sm-offset-4">
                        <%= submit_tag "SUBMIT", class: "btn btn-block btn-primary btn-lg" %><!-- animation class for button "wow tada" -->
                	 </div>
                </div>
            <% end %>
        </div>
    </div>
</aside>