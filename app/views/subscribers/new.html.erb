<header class="main-header" id="products-header">
<div id="pricing-table">
    <div class="pricing">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
          <div class="pricing-table">
            <div class="pricing-header">
              <p class="pricing-title">Premium Plan</p>
              <p class="pricing-rate"><sup>$</sup> 20 <span>/Mo.</span></p>
            </div>

            <div class="pricing-list">
              <ul>
                <li><i class="fa fa-envelope"></i>Receive our daily newletter</li>
                <li><i class="fa fa-signal"></i><span>Live</span> charts</li>
                <li><i class="fa fa-smile-o"></i>No engagement</li>
              </ul>
              <%= form_tag subscribers_path do %>
                <article>
                  <% if flash[:error].present? %>
                    <div id="error_explanation">
                      <p><%= flash[:error] %></p>
                    </div>
                  <% end %>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-name: "ETF FINANCE"
                    data-currency= "EUR"
                    data-image= "<%= image_url('BMW-logo.png') %>"
                    data-email= <%= current_user.email%>
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="Abonnement Premium"
                    data-amount= <%= @amount%>
                    data-locale="FR">
                  </script>
                </article>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

          <!-- /PRICE ITEM -->

</header>



